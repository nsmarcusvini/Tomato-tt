#include "DHT.h"
#define dht_type DHT11 //define qual o tipo de sensor DHTxx que se está sendo utilizado
int dht_pin = A1;
DHT dht_1 = DHT(dht_pin, dht_type);

void setup() 
{
  Serial.begin(9600);
  dht_1.begin();
}

void loop()
{
  float umidade = dht_1.readHumidity();
  float temperatura = dht_1.readTemperature();
  temperatura  * 0,777  ;
  
  if (isnan(temperatura) or isnan(umidade))
{
  Serial.println("Erro ao ler o DHT");
}
else
{
  Serial.print("Umidade: ");
  Serial.print(umidade);
  Serial.print(" %");
  Serial.print(" Temperatura: ");
  Serial.print(temperatura);
  Serial.println(" ºC");  
}
delay(2000);
}
